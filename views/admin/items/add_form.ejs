<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Add new items to database</h6>
    </div>
    <div class="card-body">
        <form action="/admin/items" method="POST" enctype="multipart/form-data">
            <div class="form-group">
                <label for="exampleFormControlInput1">Name:</label>
                <input type="text" class="form-control" name="nameItems" required placeholder="e.g: Villa Panjaitan" />
            </div>
            <div class="form-group">
                <label for="exampleFormControlInput1">Price:</label>
                <input type="number" class="form-control" name="priceItems" placeholder="e.g: 125000" required />
            </div>
            <div class="form-group">
                <label for="exampleFormControlInput1">City:</label>
                <input type="text" class="form-control" name="cityItems" placeholder="e.g: Bali" required />
            </div>
            <div class="form-group">
                <label for="exampleFormControlInput1">Country:</label>
                <input type="text" class="form-control" name="countryItems" placeholder="e.g: Indonesia" />
                <small id="countryHelp" class="form-text text-muted">Default country is Indonesia in case its
                    null</small>
            </div>
            <div class="form-group">
                <label for="exampleFormControlSelect2">Category:</label>
                <select required class="form-control" name="categoryItems">
                    <option value="">SELECT CATEGORY</option>
                    <% for( let i = 0; i < category.length; i++ ) { %>
                    <option value="<%= category[i].id %>"> <%= category[i].name %> </option>
                    <% } %>
                </select>
            </div>
            <div class="form-group">
                <label for="exampleFormControlFile1">Input Images <small>(max 12)</small></label>
                <input type="file" class="form-control-file" id="imagesItems" name="item-images" multiple>
            </div>
            <div class="form-group">
                <label for="descEditor">Description</label>
                <textarea required class="form-control" id="descEditor" name="descItems" rows="3"></textarea>
            </div>
            <button type="submit" class="btn btn-primary mt-2">Submit</button>
        </form>
    </div>
</div>

<script>
    CKEDITOR.replace('descEditor');
</script>